<%= form_for @user, :url => {:controller => 'users', :action => 'create'} do |f| %>

    <% if @user.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @user.errors.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <fieldset>

      <legend>填写注册信息</legend>

      <div>
        <%= f.label :Email, '邮箱' %>:
        <%= f.text_field :username %>   <br>
      </div>
      <div>
        <%= f.label :Password, '密码' %>:
        <%= f.password_field :password %>  <br>
      </div>
      <div>
        <%= f.label :Password_confirm, '确认密码' %>:
        <%= f.password_field :password_confirm %> <br>
      </div>

      <div class="actions">
        <%= f.submit '注册' %>
      </div>
    </fieldset>
<% end %>


