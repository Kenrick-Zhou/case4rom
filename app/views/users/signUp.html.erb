<%= form_for @user, :url => {:controller => 'users', :action => 'create', } do |f| %>

    <div>
      <%= f.label :Email %>:
      <%= f.text_field :username %>   <br>
    </div>
    <div>
      <%= f.label :Password %>:
      <%= f.text_field :password %>    <br>
    </div>
    <div>
      <%= f.label :Password_confirm, 'Confirm' %>:
      <%= f.text_field :password_confirm %> <br>
    </div>
    <div>
      <%= f.submit '注册' %>
    </div>

<% end %>

