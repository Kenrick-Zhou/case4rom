
<div class="signin">
<%= image_tag 'http://kaikeba-photo.b0.upaiyun.com/home-slider/19.png', :class => 'index-image'%>
<%= form_tag :action => 'redirect' do %>

    <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
    <% end %>


      <label><p>欢迎登录</p></label>
    <%= text_field_tag :email, params[:email], placeholder: '邮箱', size: 45, maxlength: 20 %>
    <br>

    <%= password_field :password, params[:password], placeholder: '密码', size: 45, maxlength: 20 %>
    <br>

    <%= check_box_tag 'remember_me' %><label for="remember_me">自动登录</label>
    <%= link_to '忘记密码', :controller => 'users', :action => 'forgot_password' %>


    <%= submit_tag '登陆', :class=> 'btn btn-danger' %>

<% end %>

 </div>