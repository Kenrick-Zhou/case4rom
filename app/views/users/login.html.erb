<%= form_tag :action => 'redirect' do %>

    <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
    <% end %>


    <label for="email">邮箱:</label>
    <%= text_field_tag :email, params[:email], placeholder: '请输入您的邮箱', size: 45, maxlength: 20 %>
    <br>

    <label for="password">密码:</label>
    <%= password_field :password, params[:password], placeholder: '请输入您的密码', size: 45, maxlength: 20 %>
    <br>

    <%= check_box_tag 'remember_me' %><label for="remember_me">记住我</label>
    <%= link_to '忘记密码', :controller => 'users', :action => 'forgot_password' %>
    <br>

    <%= submit_tag '登陆' %>

<% end %>

