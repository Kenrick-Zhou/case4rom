
<%= form_for :user,:action => 'create'  do |f| %>

        <%= f.label :username %>
        <%= f.text_field :username %>   <br>

        <%= f.label :password %>
        <%= f.text_field :password %>    <br>

        <%= f.label :password_confirm %>
        <%= f.text_field :password_confirm %>   <br>

        <%= f.submit %>
  <% end %>
